<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nextFocusRight="@id/bflNavBar" />

    <androidx.leanback.widget.BrowseFrameLayout
        android:id="@+id/bflNavBar"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:nextFocusLeft="@id/container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_menu"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="@string/search"
                android:textColor="@color/lb_tv_white" />

            <TextView
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_home"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_movies"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_movie"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_tv"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_sports"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_sport"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:drawableStart="@drawable/ic_settings"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_language"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_language"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_genre"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_genre"
                android:focusable="true" />

        </LinearLayout>

    </androidx.leanback.widget.BrowseFrameLayout>

</merge>